@model HomeList

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .body-content > div {
        column-count: 2;
        padding-bottom: 20px;
    }
</style>

@{ foreach (Park park in Model.parkList)
    {
        <div>
            @{string imagePath = "/images/parks/" + @park.parkCode.ToLower() + ".jpg";
            }
            <img src="@imagePath"/>
            <a asp-controller="Home" asp-action="Detail" asp-route-id="@park.parkCode">
                <h3 style="font-size: 36px; font-weight: bold;">@park.parkName</h3>
            </a>
            <p style="font-size: 18px;">@park.parkDescription</p>            
        </div>
    }
}